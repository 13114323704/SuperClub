<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/pullRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        app:refreshType="material">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_layout"
                android:layout_marginTop="5dp"
                android:divider="@drawable/divider_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <include
                    android:id="@+id/item_club_info_layout1"
                    layout="@layout/item_club_info_layout1" />

                <include
                    android:id="@+id/item_club_info_layout2"
                    layout="@layout/item_club_info_layout2" />

                <include
                    android:id="@+id/item_club_info_layout3"
                    layout="@layout/item_club_info_layout3" />

                <include
                    android:id="@+id/item_club_info_layout4"
                    layout="@layout/item_club_info_layout4" />

                <include
                    android:id="@+id/item_club_info_layout5"
                    layout="@layout/item_club_info_layout5" />

                <include
                    android:id="@+id/item_club_info_layout6"
                    layout="@layout/item_club_info_layout6" />

                <include
                    android:id="@+id/item_club_info_layout7"
                    layout="@layout/item_club_info_layout7" />

            </LinearLayout>
        </ScrollView>

    </com.baoyz.widget.PullRefreshLayout>

</RelativeLayout>